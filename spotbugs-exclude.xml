<?xml version="1.0" encoding="UTF-8"?>
<!--
  SpotBugs Exclusion Filter
  
  This filter excludes false positives and intentional design patterns that SpotBugs flags.
  
  SE_NO_SERIALVERSIONID:
    Vaadin Flow components are UI components that are never serialized. They are ephemeral
    and created per-request/session. Adding serialVersionUID to suppress this warning is
    unnecessary boilerplate and creates a false sense of serialization support.
  
  SE_TRANSIENT_FIELD_NOT_RESTORED:
    Similar to above - transient fields in Vaadin components are never deserialized
    because the components themselves are never serialized.
  
  EI_EXPOSE_REP and EI_EXPOSE_REP2:
    Records like UserDTO and ProjectDTO intentionally expose their fields as immutable
    collections. This is safe for DTOs that are read-only data transfer objects.
    Collections are wrapped with Collections.unmodifiableSet/List to prevent mutation.
-->
<FindBugsFilter xmlns="http://findbugs.sourceforge.net/filter/3.0.0">
  <!-- Suppress all SE_ pattern warnings (serialization issues) for the entire project -->
  <Match>
    <Bug pattern="SE_NO_SERIALVERSIONID" />
  </Match>

  <Match>
    <Bug pattern="SE_TRANSIENT_FIELD_NOT_RESTORED" />
  </Match>

  <Match>
    <Bug pattern="SE_BAD_FIELD" />
  </Match>

  <!-- Suppress EI_EXPOSE_REP for UserDto - roles are immutable -->
  <Match>
    <Class name="de.vptr.lpm.dto.UserDto" />
    <Bug pattern="EI_EXPOSE_REP" />
  </Match>

  <Match>
    <Class name="de.vptr.lpm.dto.UserDto" />
    <Bug pattern="EI_EXPOSE_REP2" />
  </Match>

  <!-- Suppress EI_EXPOSE_REP2 for UserFormDialog - userService is a CDI bean -->
  <Match>
    <Class name="de.vptr.lpm.view.user.UserFormDialog" />
    <Bug pattern="EI_EXPOSE_REP2" />
  </Match>

  <!-- Suppress DLS_DEAD_LOCAL_STORE for ProjectSettingsView - title is added in the method -->
  <Match>
    <Class name="de.vptr.lpm.view.project.ProjectSettingsView" />
    <Bug pattern="DLS_DEAD_LOCAL_STORE" />
  </Match>
</FindBugsFilter>